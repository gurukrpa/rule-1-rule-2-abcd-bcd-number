rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write to all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow specific collections to be read/written by authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /user_dates/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /user_dates_userdata/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /user_dates_abcd/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /excel_data/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /hour_entries/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /hr_data/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /rule2_analysis_results/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /rule2_results/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
